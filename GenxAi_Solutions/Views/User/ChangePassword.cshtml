@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

@* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script> *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<script src="~/js/changePassword.js"></script>

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-md-12 p-0 border">
            <div class="bg-white shadow custom-tabs">
                <div class="tab-content m2 p-3 border bg-white" id="myTabContent">
                    <div class="tab-pane fade show active" id="tab1" role="tabpanel"
                         aria-labelledby="tab1-tab">
                        <div class="card bg-light border rounded-0 shadoww">
                            <div class="card-body bg-white text-dark roundedd p-3">
                                <div class="px-3 text-center">
                                    <h5>Change Password</h5>
                                </div>

                                <!-- Success Message Div (Initially Hidden) -->
                                <div id="successMessageDiv" class="d-none text-center">
                                    <div class="alert alert-success">
                                        <i class="fas fa-check-circle fa-2x mb-3"></i>
                                        <h4 class="alert-heading">Success!</h4>
                                        <p class="mb-3">Your password has been successfully changed.</p>
                                        @* <hr> *@
                                        <p class="mb-0">
                                            Please <a href="/User/Login" class="alert-link">click here to login</a> with your new password.
                                        </p>
                                    </div>
                                    @* <div class="mt-3">
                                        <button type="button" id="btnBackToForm" class="btn btn-outline-secondary">
                                            Change Another Password
                                        </button>
                                    </div> *@
                                </div>

                                <!-- Password Change Form (Initially Visible) -->
                                <form id="changePasswordForm" class="mx-auto" style="max-width: 400px;">
                                    <input type="hidden" id="UserId" value="@Model.Id" />

                                    <div class="form-group mb-3 text-start">
                                        <label class="form-label">Old Password</label>
                                        <div class="input-group">
                                            <input asp-for="OldPassword" id="OldPassword" class="form-control" type="password" />
                                            <button type="button" class="btn btn-outline-secondary toggle-password" data-target="OldPassword">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-3 text-start">
                                        <label class="form-label">New Password</label>
                                        <div class="input-group">
                                            <input asp-for="NewPassword" id="NewPassword" class="form-control" type="password" />
                                            <button type="button" class="btn btn-outline-secondary toggle-password" data-target="NewPassword">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <div id="passwordStrength" class="mt-1 text-muted"></div>
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-3 text-start">
                                        <label class="form-label">Confirm New Password</label>
                                        <div class="input-group">
                                            <input asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control" type="password" />
                                            <button type="button" class="btn btn-outline-secondary toggle-password" data-target="ConfirmPassword">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <button type="button" id="btnChangePassword" class="btn btn-primary w-100">Change Password</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100"></div>